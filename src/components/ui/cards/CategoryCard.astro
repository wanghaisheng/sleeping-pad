---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
  count?: number;
}

const { title, description, image, url, count } = Astro.props;
---

<a
  href={url}
  class="group relative flex h-48 items-end overflow-hidden rounded-xl bg-neutral-100 shadow-lg outline-none ring-zinc-500 transition duration-300 hover:shadow-xl focus-visible:ring dark:bg-neutral-800 dark:ring-zinc-200 dark:focus:outline-none md:h-80"
>
  <Image
    src={image}
    alt={title}
    class="absolute inset-0 h-full w-full object-cover object-center transition duration-300 group-hover:scale-105"
    width={800}
    height={600}
    format="avif"
  />
  
  <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-neutral-900/75 via-neutral-900/50 to-transparent">
  </div>
  
  <div class="relative p-4 md:p-6">
    <div class="flex items-center gap-x-3">
      <h3 class="text-lg font-semibold text-white">
        {title}
      </h3>
      {count && (
        <span class="inline-flex items-center rounded-full bg-neutral-900/60 px-2 py-1 text-xs text-white">
          {count}
        </span>
      )}
    </div>
    <p class="mt-2 text-sm text-neutral-300">
      {description}
    </p>
  </div>
</a>